<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="saxophone"
          class="com.springinaction.springidol.instruments.Saxophone"/>

    <bean id="piano"
          class="com.springinaction.springidol.instruments.Piano"/>

    <bean id="guitar"
          class="com.springinaction.springidol.instruments.Guitar"/>

    <bean id="cymbal"
          class="com.springinaction.springidol.instruments.Cymbal"/>

    <bean id="harmonica"
          class="com.springinaction.springidol.instruments.Harmonica"/>

    <!--Атрибут parent свидетельствует, что оба компонента, kenny и david,
    будут наследовать определение от компонента baseSaxophonist.-->
    <bean id="kenny" parent="baseSaxophonist"/>
    <bean id="david" parent="baseSaxophonist"/>
    <bean id="frank" parent="baseSaxophonist">
        <property name="song" value="Mary had a little lamb"/>
    </bean>

    <bean id="baseSaxophonist"
          class="com.springinaction.springidol.performers.Instrumentalist"
          abstract="true"><!--сообщает фреймворку Spring не пытаться создавать экземпляр этого компонента...
                            даже если от контейнера последует явный запрос.-->
        <property name="song" value="Jingle Bells"/>
        <property name="instrument" ref="saxophone"/>
    </bean>

    <bean id="taylor"
          class="com.springinaction.springidol.performers.Vocalist"
          parent="basePerformer"/>
    <bean id="stevie"
          class="com.springinaction.springidol.performers.Instrumentalist"
          parent="basePerformer">
        <property name="instrument" ref="guitar"/>
    </bean>

    <bean id="basePerformer" abstract="true">
        <property name="song" value="Somewhere Over the Rainbow"/>
    </bean>

    <bean id="harry"
          class="com.springinaction.springidol.performers.Magician">
        <property name="magicBox" ref="magicBox"/>
        <property name="magicWords" value="Bippity boppity boo"/>
    </bean>

    <bean id="tigerReplacer"
          class="com.springinaction.springidol.inventory.TigerReplacer"/>

    <!--Компонент magicBox имеет элемент <replaced-method>, который используется
    для замены метода новой реализацией.
    В данном случае атрибут name указывает имя замещаемого метода getContents().
    А атрибут replacer ссылается на компонент tigerReplacer, реализующий замену.-->
    <bean id="magicBox"
          class="com.springinaction.springidol.inventory.MagicBoxImpl">
        <replaced-method
                name="getContents"
                replacer="tigerReplacer"/>
    </bean>

    <bean id="stevie-abs"
          class="com.springinaction.springidol.performers.InstrumentalistAbstract">
        <lookup-method name="getInstrument" bean="guitar" />
        <property name="song" value="Greensleeves" />
    </bean>

</beans>
