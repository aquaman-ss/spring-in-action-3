<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-3.0.xsd
       http://www.springframework.org/schema/aop
       http://www.springframework.org/schema/aop/spring-aop-3.0.xsd">

    <context:component-scan
            base-package="com.springinaction.springidol">
        <context:include-filter type="assignable"
                                expression="com.springinaction.springidol.instruments.Instrument"/>
        <context:include-filter type="assignable"
                                expression="com.springinaction.springidol.services.Audience"/>
        <context:include-filter type="assignable"
                                expression="com.springinaction.springidol.performers.Performer"/>
        <context:include-filter type="assignable"
                                expression="com.springinaction.springidol.poems.Poem"/>
        <context:include-filter type="assignable"
                                expression="com.springinaction.springidol.songs.Song"/>
        <context:exclude-filter type="annotation"
                                expression="com.springinaction.springidol.qualifiers.SkipIt"/>
    </context:component-scan>

    <aop:config>
        <aop:aspect ref="audience"> <!-- Ссылка на компонент audience -->
            <aop:before pointcut="execution(* com.springinaction.springidol.performers.Performer.perform(..))"
                        method="takeSeats"/> <!-- Перед выступлением -->
            <aop:before pointcut="execution(* com.springinaction.springidol.performers.Performer.perform(..))"
                        method="turnOffCellPhones"/> <!-- Перед выступлением -->
            <aop:after-returning pointcut="execution(* com.springinaction.springidol.performers.Performer.perform(..))"
                                 method="applaud"/> <!-- После выступления -->
            <aop:after-throwing pointcut="execution(* com.springinaction.springidol.performers.Performer.perform(..))"
                                method="demandRefund"/> <!-- После неудачного выступления -->
        </aop:aspect>
    </aop:config>

</beans>
